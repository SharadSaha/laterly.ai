generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id        String    @id @default(uuid())
  url       String
  content   String
  title     String?
  summary   String?
  createdAt DateTime  @default(now())

  userId    String
  user      User      @relation(fields: [userId], references: [id])

  topics    Topic[]   @relation("ArticleTopics")
  intents   Intent[]  @relation("ArticleIntents")
}

model Topic {
  id        String     @id @default(uuid())
  value     String     @unique
  articles  Article[]  @relation("ArticleTopics")
}

model Intent {
  id        String     @id @default(uuid())
  value     String     @unique
  articles  Article[]  @relation("ArticleIntents")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  articles Article[]
}
